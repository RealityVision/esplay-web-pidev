{% extends 'base.html.twig' %}

{% block title %}Chat{% endblock %}

{% block body %}
    <h1>Chat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdMessage</th>
                <td>{{ chat.idMessage }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ chat.message }}</td>
            </tr>
            <tr>
                <th>DateMessage</th>
                <td>{{ chat.dateMessage ? chat.dateMessage|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ chat.picture }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ chat.username }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ chat.file }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_chat_index') }}">back to list</a>

    <a href="{{ path('app_chat_edit', {'idMessage': chat.idMessage}) }}">edit</a>

    {{ include('chat/_delete_form.html.twig') }}
{% endblock %}
