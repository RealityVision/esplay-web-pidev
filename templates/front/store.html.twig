{% extends 'front/baseFront.html.twig' %}

{% block body %}

	<style>
		select {
			margin-left: 95px;
			width: 150px;
			padding: 5px 35px 5px 5px;
			font-size: 16px;
			border: 1px solid #ccc;
			height: 34px;
			-webkit-appearance: none;
			-moz-appearance: none;
			appearance: none;
			background: 96% / 15% no-repeat #eee;
			background-color: #DE2F69;
		}
		.select {
			margin: 40px;
			width: 150px;
			padding: 5px;
			font-size: 40px;
			height: 5px;
			-webkit-appearance: none;
			-moz-appearance: none;
			appearance: none;
		}
		/* CAUTION: IE hackery ahead */
		select::-ms-expand {
			display: none; /* remove default arrow on ie10 and ie11 */
		}
		/* target Internet Explorer 9 to undo the custom arrow */
		@media screen and(min-width:0\0) {
			select {
				background: none\9;
				padding: 5px\9;
			}
		}
	</style>
	<style>
		.btn-14 {
			background: rgb(205, 25, 75);
			border: none;
			z-index: 1;
		}
		.btn-14:after {
			position: absolute;
			content: "";
			width: 100%;
			height: 0;
			top: 0;
			left: 0;
			z-index: -1;
			border-radius: 5px;
			background-color: #c40769;
			background-image: linear-gradient(315deg, #e918f8 0%, #ec0230 74%);
			box-shadow: inset 2px 2px 2px 0 rgba(255, 255, 255, 0.5);
			7px 7px 20px 0px rgba(0,0,0,.1), 4px 4px 5px 0 rgba(0, 0, 0, 0.1);
			transition: all 0.3s ease;
		}
		.btn-14:hover {
			color: #000;
		}
		.btn-14:hover:after {
			top: auto;
			bottom: 0;
			height: 100%;
		}
		.btn-14:active {
			top: 2px;
		}

		@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700 &display=swap');
		* {
			box-sizing: border-box;
			padding: 0;
			margin: 0;
		}
		img {
			width: 100%
		}
		body {

			font-family: 'Poppins', sans-serif;
			line-height: 1.5;
			background-color: #343a40;

		}
		/****************/
		.main-container {
			width: 90vw;
			margin: 0 auto;
			padding: 40px 0;
		}
		.main-container > h2 {
			text-align: center;
			padding: 10px 0;
			font-size: 32px;
		}
		.main-container > p {
			font-weight: 300;
			padding: 10px 0;
			opacity: 0.7;
			text-align: center;
		}
		.category-head {
			margin: 30px 0;
		}
		.category-head ul {
			list-style-type: none;
			display: flex;
			flex-wrap: wrap;
			justify-content: flex-start;
		}
		.category-title {
			flex: 0 0 calc(16.6667% - 10px);
			display: flex;
			justify-content: center;
			background: #a8a8a8;
			padding: 12px;
			color: #fff;
			margin: 5px;
			cursor: pointer;
			transition: all 0.4s ease;
		}
		.category-title:hover {
			opacity: 0.7;
		}
		.category-title li {
			padding: 0 10px;
		}
		.category-title span {
			color: #222;
		}
		/** single post **/
		.posts-main-container {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			grid-gap: 40px;
		}
		.posts-main-container > div {
			box-shadow: 0 8px 22px -12px rgba(246, 49, 49, 0.64);
		}
		.post-img {
			position: relative;
		}
		.category-name {
			position: absolute;
			top: 20px;
			left: 20px;
			text-transform: uppercase;
			font-size: 13px;
			color: #fff;
			padding: 4px 10px;
			border-radius: 2px;
		}
		.sports .category-name {
			background: #a1e44d;
		}
		.arcade .category-name {
			background: #4db4e4;
		}
		.adventure .category-name {
			background: #7f24a0;
		}
		.action .category-name {
			background: #e4934d;
		}
		.platformer .category-name {
			background: #e44d70;
		}
		.horror .category-name {
			background: #0811b3;
		}
		.role-playing .category-name {
			background: #13180c;
		}
		.strategy .category-name {
			background: #d41e0d;
		}
		.puzzle .category-name {
			background: #ff209a;
		}
		.post-content {
			padding: 25px;
		}
		.post-content-top {
			background: #e25757;
			color: #fff;
			opacity: 0.8;
			padding: 5px 0 5px 15px;
		}
		.post-content-top span {
			padding-right: 20px;
		}
		.post-content-top .fa-comment,
		.post-content-top .fa-calendar {
			padding-right: 5px;
		}
		.post-content h2 {
			font-size: 22px;
			padding: 12px 0;
			font-weight: 400;
		}
		.post-content p {
			opacity: 0.7;
			font-size: 15px;
			line-height: 1.8;
		}
		.read-btn {
			border: none;
			padding: 8px 15px;
			display: block;
			margin: 5px auto 40px;
			font-family: 'Poppins', sans-serif;
			font-size: 15px;
			cursor: pointer;
			border: 1px solid #292929;
			background: transparent;
		}
		.read-btn:hover {
			background: #f6f6f6;
		}
		/***************/
		@media(max-width: 1170px) {
			.posts-main-container {
				grid-template-columns: repeat(2, 1fr);
			}
		}
		@media(max-width: 768px) {
			.posts-main-container {
				grid-template-columns: 1fr;
			}
		}
		/***********/
		.active {
			background: #f0544f;
		}
		.custom-btn {
			width: 130px;
			height: 40px;
			color: #515151;
			border-radius: 5px;
			padding: 10px 25px;
			font-family: 'Lato', sans-serif;
			font-weight: 500;
			background: transparent;
			cursor: pointer;
			transition: all 0.3s ease;
			position: relative;
			display: inline-block;
			box-shadow: inset 2px 2px 2px 0 rgba(255, 255, 255, 0.5), 7px 7px 20px 0 rgba(0, 0, 0, 0.1), 4px 4px 5px 0 rgba(0, 0, 0, 0.1);
			outline: none;
		}
	</style>


	<section class="breadcrumb-section set-bg spad" data-setbg="{{asset('front/assets/img/breadcrumb-bg.jpg')}}">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<div class="breadcrumb-text">
						<h3>
							<i class="fa fa-comment-o"></i>
							Esplay
							<span>Store</span>
						</h3>
						<div class="bt-option">
							<a href="#">Home</a>

							<span>Store</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section class="s1" style="background-color : #0d0d0d">
		<div>
			<form role="search" id="nav-search-form" method="post" action="{{ path('/produit/tri') }}">
				<div class="btn-toolbar" role="toolbar" aria-label="Programmatic control">
					<div class="btn-group btn-group-sm" aria-label="Set Select2 option">
						<button style="margin-top: 20px; margin-left: 50px;" class="js-programmatic-set-val btn btn-outline-danger mr-1 mb-1">
							Order by price
						</button>
					</div>
				</div>

			</form>
		</div>


		<div class="ml-5 mr-5 row">

			{% for produit2 in produit2s %}
				<div class="col-lg-4 col-md-6 mt-5">
					<div class="card card-bordered">
						<center>
							<img src="{{ vich_uploader_asset(produit2, 'imageFile')}}" alt="card-image-top">
						</center>
						<div class="card-body">
							<h5 class="title">{{ produit2.nom }}
							</h5>
							<h3>{{ produit2.prix }}
								dt</h3>
							<p class="card-text">{{ produit2.description }}.
								<a href="{{path('app_produit2_show', {'idp2': produit2.idp2})}}">
									<span>infos
										<i class="fa fa-angle-down"></i>
									</span>
								</a>
							</p>

							<a href="{{ path('cart_add', {'idp2': produit2.idp2}) }}" class="btn-14 custom-btn float-right">
								<i class="fa fa-shopping-cart mr-1"></i>
								Cart
							</a>
						</div>
					</div>
				</div>

			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
			<div class="navigation" style="width: -moz-max-content">
				{{ knp_pagination_render(produit2s) }}
			</div>
		</div>
	</div>
</section>{% endblock %}
