{% extends 'base.html.twig' %}

{% block title %}Game
{% endblock %}

{% block body %}
	<h1>Game</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>IdGame</th>
				<td>{{ game.idGame }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ game.title }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ game.description }}</td>
			</tr>
			<tr>
				<th>Size</th>
				<td>{{ game.size }}</td>
			</tr>
			<tr>
				<th>DateG</th>
				<td>{{ game.dateG ? game.dateG|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>ImageG</th>
				<td>{{ game.imageG }}</td>
			</tr>
			<tr>
				<th>Rate</th>
				<td>{{ game.rate }}</td>
			</tr>
			<tr>
				<th>RateNbr</th>
				<td>{{ game.rateNbr }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_game_index') }}">back to list</a>

	<a href="{{ path('app_game_edit', {'idGame': game.idGame}) }}">edit</a>

	{{ include('game/_delete_form.html.twig') }}
{% endblock %}
