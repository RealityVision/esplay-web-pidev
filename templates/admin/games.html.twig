{% extends 'admin/baseAdmin.html.twig' %}


{% block body %}
	<!-- page title area end -->
	<div class="main-content-inner">

		<div class="row" style="margin-top: 30px;">
			<div class="col-11">
				<a href="{{ path('app_game_new') }}" class="btn btn-success btn-xs pull-right" data-target="#AddModal">Add new game
				</a>
			</div>
		</div>
		<div
			class="row">
			<!-- **********************data table start cardssssssssss-->
			{% for game in games %}
				<div class="col-lg-4 col-md-6 mt-5">
					<div
						class="card card-bordered">
						<!-- //'. game.imageG.trim("C:\wamp64\www"))'-->
						<img class="card-img-top img-fluid" src={{ vich_uploader_asset(game,'imageFile') }} alt="image">
						<div class="card-body">
							<h5 class="title">{{ game.title }}</h5>
							<p class="card-text">{{ game.description }}</p>
							<a href="{{ path('app_game_edit', {'idGame': game.idGame}) }}" class="btn btn-outline-warning btn-xs">Manage</a>
						</div>
					</div>
				</div>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}


			<!--modaaaaaaaaaaaaaaaaaaaaaale edittt -->

			<div class="modal fade" id="editModal">
