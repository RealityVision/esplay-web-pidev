{% extends 'front/baseFront.html.twig' %}
{% block title %}Store
{% endblock %}

{% block body %}
	<section style="background-color: #0d0d0d;">

		<div class="container">
			<h3 style="color:#e11919; margin-top: 50px;">{{ produit2.nom }}
				Product</h3>
			<center>

				<img src="{{ vich_uploader_asset(produit2, 'imageFile')|imagine_filter('thumb') }}" alt="card-image-top" style="width: auto; height:auto ">
			</center>
			<table class="table" bgcolor="#d8d5d5" style="margin-top: 50px">
				<tbody bgcolor="#d8d5d5">

					<tr>
						<th>Name</th>
						<td>{{ produit2.nom }}</td>
					</tr>
					<tr>
						<th>Description</th>
						<td>{{ produit2.description }}</td>
					</tr>
					<tr>
						<th>Category</th>
						<td>{{ produit2.categoryP.name }}</td>

					</tr>
					<tr>
						<th>Date</th>
						<td>{{ produit2.date ? produit2.date|date('Y-m-d') : '' }}</td>
					</tr>

					<tr>
						<th>Price</th>
						<td>{{ produit2.prix }}</td>
					</tr>
					<tr>
						<th>Product stock</th>
						<td>{{ produit2.stockProduit }}</td>
					</tr>
					<tr>
						<th>Product</th>
						<td>{{ produit2.produit2 }}</td>
					</tr>
				</tbody>
			</table>
			<a href="{{ path('app_produit2_index')}}" class="btn btn-outline-secondary">

				Back to store
			</a>
			<a href=" {{ path('cart_add', {'idp2': produit2.idp2} ) }}" class=" btn btn-danger float-centre">
				<i class="fa fa-shopping-cart mr-1"></i>
				Cart
			</a>
		</div>

	</section>


{% endblock %}
